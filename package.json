{
  "name": "labyhelp-rest",
  "version": "1.0.0",
  "description": "Restful-API for the LabyHelp addon and website",
  "author": {
    "name": "Dominik Lippl",
    "url": "https://dominiklippl.de"
  },
  "private": true,
  "license": "GPL-3.0-only",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && npm run copy-assets",
    "copy-assets": "echo 'copying assets'",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "serve": "nodemon",
    "nest:start": "nest start",
    "nest:start:dev": "nest start --watch",
    "nest:start:debug": "nest start --debug --watch",
    "nest:start:prod": "node dist/main"
  },
  "dependencies": {
    "@bitnine-oss/ag-driver": "^0.1.0",
    "@liberation-data/drivine": "^2.2.1",
    "dotenv": "^8.6.0",
    "jsonwebtoken": "^8.5.1",
    "neo4j-driver": "^4.3.3",
    "swagger-ui-express": "^4.1.6",
    "cookie-parser": "^1.4.5",
    "body-parser": "^1.19.0",
    "@nestjs/common": "^7.4.4",
    "@nestjs/core": "^7.4.4",
    "@nestjs/platform-express": "^7.4.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/cookie-parser": "^1.4.2",
    "@nestjs/swagger": "^4.8.2",
    "jest": "^27.2.5",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "nodemon": "^2.0.12",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
